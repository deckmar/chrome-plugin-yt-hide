{
  "manifest_version": 2,

  "name": "Hide watched YT videos",
  "description": "Hides all watched videos on YT",
  "version": "1.3",

  "icons": {	"48": "icon48.png",
				"128": "icon128.png" },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/feed/subscriptions"],
      "js": ["yt-remove-watched-in-my-subscriptions.js"]
    },
    {
      "matches": ["https://www.youtube.com/user/*/videos"],
      "js": ["yt-remove-watched-in-user-videos.js"]
    },
    {
      "matches": ["https://www.youtube.com/user/*/featured"],
      "js": ["yt-remove-watched-in-user-home.js"]
    }
  ],

  "permissions": [
    "https://www.youtube.com/"
  ]
}